{
  "name": "wordbug",
  "type": "module",
  "version": "1.4.1",
  "description": "An (occasional) word of the day that my son thinks is cool",
  "keywords": [
    "word-of-the-day",
    "vocabulary",
    "learning",
    "astro",
    "static-site"
  ],
  "author": "Sean Kennedy <sean@codeserious.com>",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "tool:add-word": "tsx tools/add-word.ts",
    "tool:generate-word-data": "tsx tools/generate-word-data.ts",
    "tool:generate-word-images": "tsx tools/generate-word-images.ts",
    "tool:generate-word-image": "tsx tools/generate-word-image.ts",
    "tool:generate-generic-images": "tsx tools/generate-generic-images.ts",
    "tool:generate-page-image": "tsx tools/generate-page-image.ts",
    "tool:generate-all-images": "npm run tool:generate-word-images && npm run tool:generate-generic-images",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "astro": "^5.5.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/opentype.js": "^1.3.8",
    "@vitest/coverage-v8": "^1.4.0",
    "opentype.js": "^1.3.4",
    "sharp": "^0.34.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^1.4.0"
  }
}
