{
  "name": "occasional-wotd",
  "type": "module",
  "version": "3.0.2",
  "description": "Template for creating an occasional word of the day site",
  "keywords": [
    "word-of-the-day",
    "vocabulary",
    "learning",
    "astro",
    "static-site",
    "template"
  ],
  "author": "Sean Kennedy <sean@codeserious.com>",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "tool:add-word": "tsx tools/add-word.ts",
    "tool:generate-all-images": "npm run tool:generate-images && npm run tool:generate-images --generic",
    "tool:generate-images": "tsx tools/generate-images.ts",
    "tool:local": "tsx -r dotenv/config",
    "tool:migrate-preserve-case": "tsx tools/migrate-preserve-case.ts",
    "tool:ping-search-engines": "tsx tools/ping-search-engines.ts",
    "tool:regenerate-all-words": "tsx tools/regenerate-all-words.ts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "typecheck": "astro check",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,astro}": [
      "oxlint --fix",
      "vitest related --run --coverage=false"
    ]
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.15",
    "astro": "^5.17.3",
    "date-fns": "^4.1.0",
    "entities": "^7.0.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/sitemap": "^3.7.0",
    "@playwright/test": "^1.58.2",
    "@sentry/astro": "^9.32.0",
    "@sentry/node": "^9.32.0",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "opentype.js": "^1.3.4",
    "oxlint": "^1.11.0",
    "sharp": "^0.34.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  },
  "imports": {
    "#components/*": "./src/components/*",
    "#layouts/*": "./src/layouts/*",
    "#astro-utils/*": "./src/utils/*",
    "#utils/*": "./utils/*",
    "#types": "./types/index.ts",
    "#types/*": "./types/*",
    "#constants/*": "./constants/*",
    "#config/*": "./config/*",
    "#adapters": "./adapters/index.ts",
    "#adapters/*": "./adapters/*",
    "#data/*": "./data/*",
    "#styles/*": "./src/styles/*",
    "#assets/*": "./src/assets/*",
    "#tools/*": "./tools/*",
    "#locales/*": "./locales/*",
    "#tests/*": "./tests/*"
  }
}
