---
import SectionHeading from '#components/SectionHeading.astro';
import Word from '#components/Word.astro';
import WordList from '#components/WordList.astro';

const { currentWord, wordsToShow = [], sectionTitle = '' } = Astro.props;
---

<div class="word-display">
  <Word word={currentWord} />
  {wordsToShow.length > 0 && (
    <section class="past-words">
      <div class="past-words__container">
        <SectionHeading text={sectionTitle} align="center" underline={false} />
        <WordList words={wordsToShow} compact narrow />
      </div>
    </section>
  )}
</div>

<style>
    .word-display {
        display: flex;
        flex-direction: column;
        gap: 4rem;
        align-items: center;
        width: 100%;
    }

    .past-words {
        width: 100%;
        margin: var(--spacing-large) 0;
        padding: 0 var(--spacing-base);
    }

    .past-words__container {
        width: 100%;
        max-width: var(--content-width-small);
        margin: 0 auto;
        text-align: center;
    }
</style>
