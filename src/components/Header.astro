---
import { getUrl } from '../utils/utils';
---

<header class="header">
    <a href={getUrl('/')} class="header__link">
        <h2 class="header__title">bug's (occasional) word of the day</h2>
    </a>
</header>

<style>
    .header {
        text-align: center;
        padding: var(--spacing-base);
        margin-top: 1rem;
    }

    .header__title {
        font-size: 0.875rem;
        font-weight: normal;
        margin: 0;
        color: var(--color-text-lighter);
        text-transform: lowercase;
        letter-spacing: 0.5px;
        transition: color 0.2s ease;
    }

    .header__link {
        font-size: var(--font-size-small);
        text-transform: lowercase;
    }

    .header__link:hover .header__title {
        color: var(--color-text-light);
    }
</style>
