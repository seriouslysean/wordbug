---
import { SITE_TITLE } from 'astro:env/client';
import SiteLink from '#components/SiteLink.astro';
---

<header class="header">
  <nav class="header__nav">
    <SiteLink href="/" class="header__link">
      <h2 class="header__title">{SITE_TITLE}</h2>
    </SiteLink>
  </nav>
</header>

<style>
    .header {
        text-align: center;
        padding: var(--spacing-base);
        margin-top: 1rem;
    }

    .header__title {
        font-size: 0.875rem;
        font-weight: normal;
        margin: 0;
        color: var(--color-text-light);
        letter-spacing: 0.5px;
        transition: color 0.2s ease;
    }

    .header__link {
        font-size: var(--font-size-small);
    }

    .header__link:hover .header__title {
        color: var(--color-text-light);
    }
</style>
