---
import WordLink from '~components/WordLink.astro';
const { words } = Astro.props;

const formatDate = (dateStr) => {
    const date = new Date(
        dateStr.substring(0, 4),
        parseInt(dateStr.substring(4, 6)) - 1,
        dateStr.substring(6, 8)
    );
    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
};
---

{words.length > 0 && (
    <section class="past-words">
        <ul class="past-words__list">
            {words.map(word => (
                <li class="past-words__item">
                    <WordLink word={word} />
                </li>
            ))}
        </ul>
    </section>
)}

<style>
    .past-words {
        margin: 0 auto;
    }

    .past-words__list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .past-words__item {
        padding: 0.5rem 0;
    }

    .past-words__link {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        text-decoration: none;
        padding: 0.25rem 0;
        transition: opacity 0.2s ease;
    }

    .past-words__link:hover {
        opacity: 0.7;
    }

    .past-words__word {
        font-size: 1.1rem;
        font-weight: 500;
        color: var(--color-primary-light, #4a7c7d);
    }

    .past-words__date {
        font-size: 0.8rem;
        color: var(--color-text-lighter, #8a8f98);
        margin-left: 1rem;
        text-transform: lowercase;
        font-weight: normal;
    }
</style>
