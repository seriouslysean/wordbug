---
const currentYear = new Date().getFullYear();
const attributionUrl = 'https://github.com/seriouslysean';
---

<footer class="footer">
    <p class="footer__text">
        <a href={attributionUrl} target="_blank" rel="noopener noreferrer">Made with &lt;3, {currentYear}</a>
    </p>
</footer>

<style>
    .footer {
        margin-top: auto;
        padding: 1rem;
        text-align: center;
    }

    .footer__text {
        margin: 0;
        font-size: 0.875rem;
        color: var(--color-text-light);
        opacity: 0.7;
        transition: opacity 0.2s ease;
    }

    .footer__text:hover {
        opacity: 1;
    }

    .footer__separator {
        margin: 0 0.5rem;
        opacity: 0.5;
    }

    .footer__copyright {
        opacity: 0.7;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }
</style>
