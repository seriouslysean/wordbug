---
import { getUrl } from '~/utils/utils';

const currentYear = new Date().getFullYear();
const attributionUrl = 'https://github.com/seriouslysean';
---

<footer class="footer" role="contentinfo">
    <p class="footer__text">
        <a href={getUrl('/words')} aria-label="View all words">All Words</a>
        <span class="footer__separator">&middot;</span>
        <a href={attributionUrl} target="_blank" rel="noopener noreferrer" aria-label="View Sean Kennedy's GitHub profile (opens in new tab)">Made with &lt;3, {currentYear}</a>
    </p>
</footer>

<style>
    .footer {
        margin-top: auto;
        padding: 1rem;
        text-align: center;
    }

    .footer__text {
        margin: 0;
        font-size: 0.875rem;
        color: var(--color-text-lighter);
    }

    .footer__text a {
        color: inherit;
        transition: color 0.2s ease;
    }

    .footer__text a:hover {
        color: var(--color-text-light);
    }

    .footer__separator {
        margin: 0 1rem;
        opacity: 0.5;
    }
</style>
