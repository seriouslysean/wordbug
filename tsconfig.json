{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~components/*": ["src/components/*"],
      "~layouts/*": ["src/layouts/*"],
      "~utils/*": ["src/utils/*"],
      "~data/*": ["src/data/*"],
      "~styles/*": ["src/styles/*"],
      "~config/*": ["src/config/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
